{{#if books}}
{{#each books}}
<div class="col-md-4">
  <div class="card card-body">
    <h3>{{title}}</h3>
    <p>author: {{author}}</p>
    <p>ISBN: {{isbn}}</p>
    <form action="/books/delete/{{_id}}" method="DELETE">
      <button type="submit">Borrar</button>
    </form>
  </div>
</div>
{{/each}}
{{/if}}